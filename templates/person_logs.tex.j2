{% if records %}
\begin{longtable}{@{}p{2.5cm} p{2.5cm} p{9cm}@{}}
\toprule
\textbf{ {{ "Project" | latex }} } & \textbf{ {{ "Date" | latex }} } & \textbf{ {{ "Task" | latex }} } \\
\midrule
\endfirsthead

\toprule
\textbf{ {{ "Project" | latex }} } & \textbf{ {{ "Date" | latex }} } & \textbf{ {{ "Task" | latex }} } \\
\midrule
\endhead

\bottomrule
\endfoot

{% for row in records %}
{{ row.project | latex }} & {{ row.date | latex }} & {{ row.task | latex }} \\
